FROM ubuntu:25.10

ARG ZIG_DIR=repo/zig-aarch64-linux-0.15.2

RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    ca-certificates \
    curl \
    git \
    gnucobol \
    libsqlite3-dev \
    pkg-config \
    xz-utils \
  && rm -rf /var/lib/apt/lists/*

COPY ${ZIG_DIR} /opt/zig
RUN ln -s /opt/zig/zig /usr/local/bin/zig

WORKDIR /work
